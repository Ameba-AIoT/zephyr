config TEMP_AMEBA
	bool "AMEBA Temperature Sensor"
	default y
	depends on DT_HAS_REALTEK_AMEBA_TEMP_ENABLED
	depends on SOC_FAMILY_REALTEK_AMEBA
	help
	  Enable driver for temperature sensor on certain ameba targets.
